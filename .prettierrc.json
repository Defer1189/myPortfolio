{
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "jsxSingleQuote": true,
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 4,
  "trailingComma": "all",
  "useTabs": false,
  "overrides": [
    {
      "files": ["**/*.json"],
      "options": {
        "parser": "json",
        "tabWidth": 2,
        "trailingComma": "none"
      }
    },
    {
      "files": ["**/package.json", "**/package-lock.json"],
      "options": {
        "parser": "json-stringify",
        "tabWidth": 2
      }
    },
    {
      "files": ["**/*.jsonc"],
      "options": {
        "parser": "jsonc",
        "tabWidth": 2,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.md",
      "options": {
        "proseWrap": "preserve"
      }
    }
  ]
}
