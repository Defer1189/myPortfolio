# myPortfolio/.editorconfig

# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

[*] # Aplica a todos los archivos
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx}] # Aplica a archivos JavaScript/JSX
indent_size = 4

[*.json] # Especifico para JSON
indent_size = 2

[*.md] # Específico para Markdown
trim_trailing_whitespace = false
indent_style = space

[package-lock.json] # Excluir archivos generados
indent_style = ignore 

[*.{png,jpg,gif,ico}] # Específico para binarios y dif
binary = true
diff = image

[*.{bat,cmd}]
end_of_line = crlf