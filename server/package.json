{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend API for my professional portfolio",
  "keywords": [
    "portfolio",
    "api",
    "nodejs",
    "express",
    "mongodb"
  ],
  "license": "MIT",
  "author": "Deiby Arango",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon -r ./bootstrap.js src/index.js",
    "dev:debug": "cross-env NODE_DEBUG=mongoose,http NODE_ENV=development nodemon -r ./bootstrap.js src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write . --ignore-path .prettierignore",
    "format:check": "prettier --check . --ignore-path ../.prettierignore",
    "start": "cross-env NODE_ENV=production node -r ./bootstrap.js src/index.js",
    "start:staging": "cross-env NODE_ENV=staging node -r ./bootstrap.js src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.14.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=22.14.0"
  }
}
